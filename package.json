{
  "name": "bootstrap-node",
  "private": true,
  "version": "1.0.0",
  "description": "Install globally: `npm install -g .`",
  "type": "module",
  "main": "./bin/main.js",
  "bin": {
    "bootstrap-node": "bin/main.js"
  },
  "scripts": {
    "config:setup": "node ./bin/checkConfig.js",
    "dev": "npm run dev:clean && node ./bin/bootstrapDevProject.js",
    "dev:clean": "rm -rf ./test-project",
    "install:global": "npm run config:setup && npm install -g .",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Dave Schumaker <dave@dave.ly>",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chalk": "^5.0.1",
    "cli-box": "^6.0.10",
    "inquirer": "^9.0.2",
    "replace-in-file": "^6.3.5",
    "shelljs": "^0.8.5",
    "validate-npm-package-name": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}